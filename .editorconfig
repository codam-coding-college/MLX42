# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx,css,scss,html,svelte,postcss,glsl,c,h}]
indent_size = 2
indent_style = tab
trim_trailing_whitespace = true